    @using (Html.BeginForm("Upload", "Documents", new { enctype = "multipart/form-data", courseid = ViewBag.courseid, modulid = ViewBag.modulid }, FormMethod.Post, null))
    {
        @Html.AntiForgeryToken()
            <div class="form-group">
                <fieldset>
                    Upload a file
                    <div class="editor-field">
                        @Html.TextBox("file", "", new { type = "file" })
                    </div>
                    <div class="editor-field">
                        <input type="submit" value="Upload" />
                    </div>
                </fieldset>
            </div>
            }
            <table class="table table-striped sortable">
                <thead>
                    <tr>
                        <th>
                            @Html.DisplayNameFor(model => model.DocumentId)
                        </th>
                        <th>
                            @Html.DisplayNameFor(model => model.FileName)
                        </th>
                    </tr>
                </thead>
                @foreach (var item in Model)
                {
                    <tbody>
                        <tr>
                            <td>
                                @Html.DisplayFor(modelItem => item.DocumentId)
                            </td>
                            <td>
                                @Html.DisplayFor(modelItem => item.FileName)
                            </td>
                            <td>
                                @Html.ActionLink("Download", "GetFileFromDisk", new { documenid = item.DocumentId })
                            </td>
                            <td>
                                @Html.ActionLink("Ta bort", "Delete", new { id = item.DocumentId })
                            </td>
                        </tr>
                    </tbody>
                }
            </table>

