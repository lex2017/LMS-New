@model IEnumerable<LexiconLMS.Models.Document>
@{
    ViewBag.Title = "Dokument";
}
@if (ViewBag.coursename != null && ViewBag.modulname != null && ViewBag.activityname != null)
{
    <h4>
        <span class="glyphicon glyphicon-arrow-up"></span>@Html.ActionLink("Kurs", "Index", "Courses"): <span class="alert-info">@ViewBag.coursename</span>
        <b> <span class="glyphicon glyphicon-arrow-up"></span>@Html.ActionLink("Modular", "ModuleFilter", "Modules", new { courseid = ViewBag.courseid, modulid = TempData["modulid"] }, null):</b><span class="alert-info">@ViewBag.modulname</span>
        <b> <span class="glyphicon glyphicon-arrow-up"></span>@Html.ActionLink("Aktivity", "ActivityFilter", "Activities", new {  modulid = TempData["modulid"] }, null):</b>
        <span class="alert-info">@ViewBag.activityname</span>
        <b> <span class="glyphicon glyphicon-arrow-right"></span> Dokument</b>
    </h4>
}
else if (ViewBag.coursename != null && ViewBag.modulname != null)
{
    <h4><span class="glyphicon glyphicon-arrow-up"></span>@Html.ActionLink("Kurs", "Index", "Courses"): <span class="alert-info">@ViewBag.coursename</span>  
    <b> <span class="glyphicon glyphicon-arrow-up"></span>@Html.ActionLink("Modul", "ModuleFilter", "Modules", new { courseid = ViewBag.courseid }, null):</b>
    <span class="alert-info">@ViewBag.modulname</span><b> <span class="glyphicon glyphicon-arrow-right"></span> Dokument</b></h4>
}
else if (ViewBag.coursename != null)
{
    <h4><span class="glyphicon glyphicon-arrow-up"></span>@Html.ActionLink("Kurs", "Index", "Courses"): <span class="alert-info">@ViewBag.coursename</span>
     <b> <span class="glyphicon glyphicon-arrow-right"></span> Dokument</b></h4>
}
